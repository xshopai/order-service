{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/OrderService.Api/OrderService.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "dapr-start",
      "type": "shell",
      "command": "dapr",
      "args": [
        "run",
        "--app-id", "order-service",
        "--app-port", "1006",
        "--dapr-http-port", "3506",
        "--dapr-grpc-port", "50006",
        "--log-level", "warn",
        "--resources-path", "./.dapr",
        "--config", "./.dapr/config.yaml"
      ],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "owner": "dapr",
        "pattern": [
          {
            "regexp": "^$",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Starting Dapr",
          "endsPattern": "^You're up and running"
        }
      },
      "dependsOn": "build"
    },
    {
      "label": "dapr-stop",
      "type": "shell",
      "command": "dapr",
      "args": [
        "stop",
        "--app-id", "order-service"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
